{
  "name": "@ycore/forge",
  "version": "2.3.2",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ycore/forge.git"
  },
  "exports": {
    "./context": {
      "types": "./src/context/index.ts",
      "import": "./src/context/index.ts"
    },
    "./intent": {
      "types": "./src/intent/index.ts",
      "import": "./src/intent/index.ts"
    },
    "./intent/server": {
      "types": "./src/intent/server/index.ts",
      "import": "./src/intent/server/index.ts"
    },
    "./logger": {
      "types": "./src/logger/index.ts",
      "import": "./src/logger/index.ts"
    },
    "./logger/plugin": {
      "node": {
        "types": "./src/logger/plugin/index.ts",
        "import": "./src/logger/plugin/index.ts"
      }
    },
    "./markdown": {
      "types": "./src/markdown/index.ts",
      "import": "./src/markdown/index.ts"
    },
    "./markdown/server": {
      "types": "./src/markdown/server/index.ts",
      "import": "./src/markdown/server/index.ts"
    },
    "./markdown/plugin": {
      "node": {
        "types": "./src/markdown/plugin/index.ts",
        "import": "./src/markdown/plugin/index.ts"
      }
    },
    "./markdown/styles/markdown.css": "./src/markdown/styles/markdown.css",
    "./services": {
      "types": "./src/services/index.ts",
      "import": "./src/services/index.ts"
    },
    "./result": {
      "types": "./src/result/index.ts",
      "import": "./src/result/index.ts"
    },
    "./utils": {
      "types": "./src/utils/index.ts",
      "import": "./src/utils/index.ts",
      "require": "./src/utils/index.ts"
    },
    "./vite/plugins": {
      "node": {
        "types": "./src/vite/plugins/index.ts",
        "import": "./src/vite/plugins/index.ts"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "nanoid": "^5.1.5"
  },
  "peerDependencies": {
    "clsx": ">= 2.1.0 < 3",
    "drizzle-orm": ">= 0.38.0 < 1",
    "isomorphic-dompurify": ">= 2.26.0 < 3",
    "marked": ">= 16.0.0 < 17",
    "react": ">= 19.1.0 < 20",
    "react-dom": ">= 19.1.0 < 20",
    "react-router": ">= 7.6.0 < 8",
    "shiki": ">= 3.7.0 < 4"
  },
  "devDependencies": {
    "@total-typescript/tsconfig": "^1.0.4",
    "@types/react": "^19.1.13",
    "vite": "^7.1.6"
  },
  "scripts": {
    "clean": "rm -rf dist node_modules",
    "ws:format": "biome format src",
    "ws:lint": "biome lint src",
    "ws:tc": "tsc --noEmit",
    "ws:types": "wrangler types --include-env=false './src/@types/worker-runtime.d.ts' && bun run ws:tc"
  }
}
