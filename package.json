{
  "name": "@ycore/forge",
  "version": "2.2.6",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ycore/forge.git"
  },
  "exports": {
    "./error": {
      "import": "./dist/error/index.js",
      "types": "./dist/error/index.d.ts",
      "default": "./src/error/index.ts"
    },
    "./logger": {
      "import": "./dist/logger/index.js",
      "types": "./dist/logger/index.d.ts",
      "default": "./src/logger/index.ts"
    },
    "./markdown": {
      "import": "./dist/markdown/index.js",
      "types": "./dist/markdown/index.d.ts",
      "default": "./src/markdown/index.ts"
    },
    "./markdown/server": {
      "import": "./dist/markdown/server/index.js",
      "types": "./dist/markdown/server/index.d.ts",
      "default": "./src/markdown/server/index.ts"
    },
    "./markdown/plugin": {
      "node": {
        "import": "./dist/markdown/plugin/index.js",
        "types": "./dist/markdown/plugin/index.d.ts",
        "default": "./src/markdown/plugin/index.ts"
      }
    },
    "./markdown/styles/markdown.css": "./dist/markdown/styles/markdown.css",
    "./server": {
      "import": "./dist/server/index.js",
      "types": "./dist/server/index.d.ts",
      "default": "./src/server/index.ts"
    },
    "./utils": {
      "import": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts",
      "default": "./src/utils/index.ts"
    },
    "./vite/plugins": {
      "node": {
        "import": "./dist/vite/plugins/index.js",
        "types": "./dist/vite/plugins/index.d.ts",
        "default": "./src/vite/plugins/index.ts"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src"
  ],
  "peerDependencies": {
    "@ycore/componentry": "catalog:peer",
    "clsx": "catalog:peer",
    "isomorphic-dompurify": "catalog:peer",
    "marked": "catalog:peer",
    "react": "catalog:peer",
    "react-dom": "catalog:peer",
    "react-router": "catalog:peer",
    "shiki": "catalog:peer"
  },
  "devDependencies": {
    "@total-typescript/tsconfig": "catalog:dev",
    "@types/react": "catalog:dev",
    "vite": "catalog:dev"
  },
  "scripts": {
    "clean": "rm -rf dist node_modules",
    "ws:types": "bun ../../scripts/build-package.ts . --types-only && wrangler types --include-env=false './src/@types/worker-runtime.d.ts' && wrangler types --include-runtime=false './src/@types/worker-configuration.d.ts' && tsc --noEmit"
  }
}
